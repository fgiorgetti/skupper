[Unit]
Description=skupper-site-{{.Site.Name}}.service
Wants=network-online.target
After=network-online.target
RequiresMountsFor={{.RuntimeDir}}/containers

[Service]
TimeoutStopSec=70
RemainAfterExit=yes
ExecStart={{.SiteScriptPath}}/start.sh
ExecStop={{.SiteScriptPath}}/stop.sh
Type=simple

[Install]
WantedBy=default.target
